{
  "name": "meteor-chimp-poc",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "start:debug": "NODE_OPTIONS='--debug' meteor run",
    "test": "chimp --ddp=http://localhost:3000 --mocha --path=tests",
    "test:watch": "chimp --ddp=http://localhost:3000 --watch --mocha --path=tests"
  },
  "dependencies": {
    "chai": "^3.5.0",
    "meteor-node-stubs": "~0.2.0"
  },
  "devDependencies": {
    "chimp": "^0.41.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {}
  }
}
